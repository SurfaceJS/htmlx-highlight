{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "injectionSelector": "L:text.html.derivative - (comment, source.js)",
    "name": "Html Expressions",
    "patterns": [
        {
            "include": "#custom-tags"
        },
        {
            "include": "#expression"
        },
        {
            "include": "#directives"
        }
    ],
    "repository": {
        "custom-tags": {
            "patterns": [
                {
                    "begin": "(<)(\\w+(?:-\\w+)+)(?=\\s|/?>)",
                    "beginCaptures": {
                        "1": {
                            "name": "punctuation.definition.tag.begin.html"
                        },
                        "2": {
                            "name": "support.class"
                        }
                    },
                    "end": "/?>",
                    "endCaptures": {
                        "0": {
                            "name": "punctuation.definition.tag.end.html"
                        }
                    },
                    "name": "meta.tag.custom.start.html",
                    "patterns": [
                        {
                            "include": "text.html.basic#attribute"
                        }
                    ]
                },
                {
                    "begin": "(</)(\\w+(?:-\\w+)+)(?=\\s|/?>)",
                    "beginCaptures": {
                        "1": {
                            "name": "punctuation.definition.tag.begin.html"
                        },
                        "2": {
                            "name": "support.class"
                        }
                    },
                    "end": ">",
                    "endCaptures": {
                        "0": {
                            "name": "punctuation.definition.tag.end.html"
                        }
                    },
                    "name": "meta.tag.custom.end.html",
                    "patterns": [
                        {
                            "include": "text.html.basic#attribute"
                        }
                    ]
                },
                {
                    "begin": "(<)(template)(?=\\s|/?>)",
                    "beginCaptures": {
                        "1": {
                            "name": "punctuation.definition.tag.begin.html"
                        },
                        "2": {
                            "name": "keyword.control"
                        }
                    },
                    "end": "/?>",
                    "endCaptures": {
                        "0": {
                            "name": "punctuation.definition.tag.end.html"
                        }
                    },
                    "name": "meta.tag.custom.start.html",
                    "patterns": [
                        {
                            "include": "#directives"
                        },
                        {
                            "include": "text.html.basic#attribute"
                        }
                    ]
                },
                {
                    "begin": "(</)(template)(?=\\s|/?>)",
                    "beginCaptures": {
                        "1": {
                            "name": "punctuation.definition.tag.begin.html"
                        },
                        "2": {
                            "name": "keyword.control"
                        }
                    },
                    "end": ">",
                    "endCaptures": {
                        "0": {
                            "name": "punctuation.definition.tag.end.html"
                        }
                    },
                    "name": "meta.tag.custom.end.html",
                    "patterns": [
                        {
                            "include": "#directives"
                        },
                        {
                            "include": "text.html.basic#attribute"
                        }
                    ]
                }
            ]
        },
        "directives": {
            "patterns":
            [
                {
                    "begin": "(#\\b(?:if|else-if|else|for|(?:inject|placeholder)-key)\\b)|(#\\b(?:(?:inject|placeholder)))\\b(?:(:)(\\w+))?\\b",
                    "beginCaptures": {
                        "1": {
                            "name": "keyword.control"
                        },
                        "2": {
                            "name": "keyword.control"
                        },
                        "3": {
                            "name": "punctuation.separator.key-value.html"
                        },
                        "4": {
                            "name": "entity.other.attribute-name.html"
                        }
                    },
                    "end": "(?=\\s*+[^=\\s])",
                    "name": "meta.directive",
                    "patterns": [
                        {
                            "include": "text.html.attribute-expression#expression"
                        }
                    ]
                },
                {
                    "begin": "(#\\b(?:\\w|-)+\\b)(?::((?:\\w|-)+))?",
                    "beginCaptures": {
                        "1": {
                            "name": "variable.other"
                        },
                        "2": {
                            "name": "entity.other.attribute-name.html"
                        }
                    },
                    "end": "(?=\\s*+[^=\\s])",
                    "name": "meta.directive",
                    "patterns": [
                        {
                            "include": "text.html.attribute-expression#expression"
                        }
                    ]
                }
            ]
        }
    },
    "scopeName": "text.html.expression"
}